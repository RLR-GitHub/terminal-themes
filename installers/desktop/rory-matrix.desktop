Icon=rory-terminal
Exec=rory-terminal-launcher --matrix --theme christmas

[Desktop Action Easter]
Name=Easter Theme
Icon=rory-terminal
Exec=rory-terminal-launcher --matrix --theme easter

[Desktop Action Hacker]
Name=Hacker Theme
Icon=rory-terminal
Exec=rory-terminal-launcher --matrix --theme hacker

[Desktop Action Classic]
