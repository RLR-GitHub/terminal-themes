[Desktop Entry]
Version=1.1
Type=Application
Name=Rory Matrix
GenericName=Matrix Animation
Comment=Matrix-style terminal animations with cyberpunk themes
Icon=rory-terminal
Exec=rory-terminal-launcher --matrix
Terminal=false
Categories=System;Graphics;
Keywords=matrix;animation;terminal;cyberpunk;screensaver;
StartupNotify=false
Actions=Halloween;Christmas;Easter;Hacker;Classic;

[Desktop Action Halloween]
